extends layout

block content
  section
    h1 News
    p.lead
      | Stay in touch with the latest news from your chapter.

    each article in articles
      article.article.intro
        header
          p.date
            span= moment.utc(article.metadata.date).format('MMM Do, YYYY, h:mm a')
          h2
            a(href=article.url)= article.title
        section.content
          !{ typogr(article.intro).typogrify() }
          if article.hasMore
            a(href=article.url) Read moreâ†’

    .text-center
      ul.pagination
        if prevPage
          li: a(href=prevPage.url) &laquo;
        else
          li: span &laquo;
        li: a(href='#') 1
        if nextPage
          li: a(href=nextPage.url) &raquo;
        else
          li: span &raquo;
