extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{page.title + " - "}

block content
  article.article
    header
      p.date
        span= moment(page.metadata.date).format('MMM Do, YYYY, h:mm a')
      h2
        a(href=page.url)= page.title
    section.content!= typogr(page.html).typogrify()
    .discuss
      include includes/disqus
      +disqus('imperialacm')
