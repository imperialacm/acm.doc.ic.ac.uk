extends layout

block append vars
  - bodyclass = 'event-detail'

block prepend title
  | #{page.title + " - "}

block content
  section
    article.event
      header
        p.date
          span= moment.utc(page.metadata.date).format('MMM Do, YYYY, h:mm a')
          |  in  
          = page.metadata.room
        h2
          a(href=page.url)= page.title
      section.content!= typogr(page.html).typogrify()
    .clearfix
    include includes/disqus
    +disqus('imperialacm', page.url, page.title, page.url)
