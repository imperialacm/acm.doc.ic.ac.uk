extends layout

mixin author(authorName)
  - var author = contents.authors[authorName + '.json']
  a.photo(href='#')
    img.img-circle(src=author.metadata.photo, width=100)
  p
    span.author
      if author
        a(href='mailto:'+author.metadata.email)= author.metadata.name
      else
        =authorName
    | &nbsp;
    = author.metadata.bio
    | &nbsp;
    a(href=author.metadata.homepage) More about meâ†’

block prepend title
  | #{page.title} - 

block content
  section
    article.event
      header
        p.date
          span= moment.utc(page.metadata.date).format('MMM Do, YYYY, h:mm a')
          |  in  
          = page.metadata.room
        h2
          a(href=page.url)= page.title
      section.content
        !{ typogr(page.html).typogrify() }
      .meta
        +author(page.metadata.author)
    .clearfix
    include includes/disqus
    +disqus('imperialacm', page.url, page.title, page.url)
